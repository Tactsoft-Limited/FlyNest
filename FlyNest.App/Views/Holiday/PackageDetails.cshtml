
@{
    ViewData["Title"] = "PackageDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="package-details">
    <div id="carouselExampleControls" class="carousel slide " data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/tourPackage/@Model.ImageOne" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/tourPackage/@Model.ImageTwo" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/tourPackage/@Model.ImageThree" alt="First slide">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>


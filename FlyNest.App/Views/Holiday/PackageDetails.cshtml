@{
    ViewData["Title"] = "PackageDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="package-details">
    <div id="carouselExampleControls" class="carousel slide " data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/tourPackage/@Model.ImageOne" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/tourPackage/@Model.ImageTwo" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/tourPackage/@Model.ImageThree" alt="First slide">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- =========== Maldives Area Start =========== -->
<div class="about-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-6 col-sm-12">
                <h1 class="fw-bold">@Model.Title</h1>
                <h3 class="fw-bold mt-3"> @Model.TourDescription </h3>
                <h5 class="my-3 fw-bold">
                    Group Size: 2/4 Persons
                </h5>

                <h5 class="my-3 fw-bold">Day-Wise Tour Itinerary:</h5>
                <h6 class="fw-bold"> Day 01: Arrival Maldives, Check in, Free day </h6>

                <p class="my-3">
                    Fly from Shahjalal Int. Airport, Dhaka to Male International Airport. Upon arrival at the airport, you will meet our local representative who
                    will transfer you to the hotel. Enjoy on your own. Overnight stay at Maafushi.
                </p>
                <h6 class="fw-bold"> Day 02: Free day </h6>
                <p class="my-2">
                    Post Breakfast day is free for leisure. You would also get the opportunity to snorkel in the clear waters of a desert island experience on the beach at additional cost. Overnight at the hotel.
                </p>
                <h6 class="fw-bold"> Day 03: Arrival Hulhumlae </h6>
                <p class="my-2">
                    Check in, Free day, enjoy your moment in city, go for shopping & others
                </p>
                <h6 class="fw-bold"> Day 04: Arrival Sri lanka: </h6>
                <p class="my-2">
                    Take a city tour to explore the capital city of Sri Lanka, with its captivating buildings, parks, monuments, museum, iconic temples and great shopping. After completing the tour you will be transferred to the hotel, check in & time to relax.
                </p>
                <h6 class="fw-bold"> Day 05: Arrival Dhaka </h6>
                <p class="my-2">
                    Have breakfast at the hotel and be ready for your flight to Dhaka. After the check out from the hotel, our driver will pick you up in time for your flight back to Dhaka.
                </p>
                <h3 class="fw-bold">End of the tour, hope you enjoyed the services of Renaissance Holidays. </h3>

                <p class="mt-3"><strong><span style="font-size:24px;">Hotel Hulhumale:</span></strong> Noomoo or similar</p>
                <p class="mt-2"><strong><span style="font-size:24px;">Hotel Maafushi:</span></strong> Icom Marina or similar</p>
                <p class="mt-2"><strong><span style="font-size:24px;">Hotel Sri Lanka:</span></strong> The Best Western or Similar Hotel </p>
                <p class="mt-2"><strong><span style="font-size:24px;">Airlines:</span></strong> Sri Lankan Air (UL)</p>
                <br />
                <br />
                @{
                    string[] inclusionLists = Model.Inclusion.Split('.');
                    <h3 class="fw-bold">Holiday Inclusions:</h3>
                    <ul class="inclusion">
                        @foreach (var listItem in inclusionLists)
                        {
                            <li class="mt-2">• @listItem</li>
                        }
                    </ul>
                }

                <br />
                <br />
                @{
                    string[] exclusionsLists = Model.Exclusion.Split('.');
                    <h3 class="fw-bold">Holiday Exclusions:</h3>
                    <ul class="inclusion">
                        @foreach (var listItem in exclusionsLists)
                        {
                            <li class="mt-2">• @listItem</li>
                        }
                    </ul>
                }
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="my-3">
                            <span>For any query please Call : </span> <a href="tel:+8801958618221"> 01958618221</a>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h3> Package Price ৳ @Model.PackagePrice </h3>
                    </div>
                    <div class="card-footer">
                        <div class="my-3">
                            <a asp-route-id="@Model.Id" asp-action="Booking" asp-controller="Holiday" class="btn btn-primary">Book Now</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- =========== Maldives Area End =========== -->

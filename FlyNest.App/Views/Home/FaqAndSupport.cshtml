@model IEnumerable<FlyNest.Application.ViewModels.VmEntities.VmFaq>

@{
    ViewData["Title"] = "FaqAndSupport";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var groupedFaqs = Model.GroupBy(f => f.Category);
}

<!-- =========== Breadcumb Start =========== -->
<div class="bredcumb-section">
    <div class="overlay"></div>
    <div class="bredcumb-text position-absolute h-100 w-100 d-flex justify-content-center align-items-center">
        <div class="text-center">
            <div class="page-title">
                <h3 class="fw-bold">FAQ</h3>
            </div>
            <div class="mt-10">
                <a href="index.html">Home</a>
                <span><i class="bi bi-chevron-right mx-1" style="color: var(--primary-color);"></i></span>
                <span>FAQ</span>
            </div>
        </div>
    </div>
</div>
<!-- =========== Breadcumb End =========== -->

<!-- =========== FAQ Start =========== -->
<div class="container pt-5 pb-5">
    <div class="faq-area">
        <div class="row g-5">
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="side-nav">
                    <div class="nav nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        @foreach (var group in groupedFaqs)
                        {
                            <button class="nav-link @(group == groupedFaqs.First() ? "active" : "")" id="v-pills-@group.Key.ToLower()-tab" data-bs-toggle="pill"
                                    data-bs-target="#v-pills-@group.Key.ToLower()" type="button" role="tab" aria-controls="v-pills-@group.Key.ToLower()"
                                    aria-selected="true">
                                @group.Key
                            </button>
                        }

                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-8 col-sm-12">
                <div class="tab-content" id="v-pills-tabContent">
                    @foreach (var group in groupedFaqs)
                    {
                        <div class="tab-pane fade" id="v-pills-@group.Key.ToLower()" role="tabpanel"
                             aria-labelledby="v-pills-@group.Key.ToLower()-tab" tabindex="0">
                            <h6 class="title">@group.Key</h6>
                            <div class="mt-3">
                                <div class="accordion" id="accordionHotel">

                                    @foreach (var faq in group)
                                    {
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                                        data-bs-target="#collapseOne" aria-expanded="true"
                                                        aria-controls="collapseOne">
                                                    Q: @faq.Question
                                                </button>
                                            </h2>
                                            <div id="collapseOne" class="accordion-collapse collapse show"
                                                 data-bs-parent="#accordionHotel">
                                                <div class="accordion-body">
                                                    @faq.Answer
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- =========== FAQ End =========== -->

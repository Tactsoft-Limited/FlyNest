@model FlyNest.Application.ViewModels.VmEntities.VmVisaRequest

@{
    ViewData["Title"] = "ServiceRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card my-5">
        <div class="card-body p-4">
            <h1 class="card-title">Need More Help!</h1>
            <div class="d-flex justify-content-between align-items-center">
                <p class="mr-3">Call our experts and share any questions you have. Our team is ready to assist you every step of the way.</p>
                <a href="tel:+8801958618221" class="btn btn-primary"><i class="fa-solid fa-phone"></i> +880 1958-618221</a>
            </div>

        </div>
    </div>

    <div class="card p-5">
        <div class=" card-body">
            <h4 class="card-title mb-4">Tell us where do you want to go?</h4>
            <form asp-action="ServiceRequest">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" class="form-control" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="CountryName" class="form-control" placeholder="Country Name">
                            <label asp-for="CountryName" >Country Name</label>
                            <span asp-validation-for="CountryName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="TravelDate" class="form-control" placeholder="Travel Date">
                            <label asp-for="TravelDate">Travel Date</label>
                            <span asp-validation-for="TravelDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <h5 class="card-title my-4">Tell us about Yourself </h5>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="FirstName" class="form-control" placeholder="First Name">
                            <label asp-for="FirstName">First Name</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="LastName" class="form-control" placeholder="Last Name">
                            <label asp-for="LastName">Last Name</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Email">
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="MobileNumber" class="form-control" placeholder="Mobile Number">
                            <label asp-for="MobileNumber">Mobile Number</label>
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <h5 class="card-title my-4">Share your Requirements</h5>
                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <textarea asp-for="Requirements" class="form-control" placeholder="Requirements"></textarea>
                            <label asp-for="Requirements">Requirements</label>
                            <span asp-validation-for="Requirements" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-12 d-flex justify-content-end">
                        <!-- This div aligns the button to the right -->
                        <div class="form-group">
                            <input type="submit" value="Submit your Request" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

            </form>
        </div>

    </div>

</div>

@model FlyNest.Application.ViewModels.VmEntities.VmHotel

@{
    ViewData["Title"] = "AddEdit";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Hotel</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Create Hotel</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="card ">
        <div class="card-header">
            <h3 class="card-title">Create Hotel</h3>
        </div>
        <div class="card-body">
            <form asp-action="AddEdit" asp-controller="Hotel" role="form" enctype="multipart/form-data">
                <div class="modal-body form-horizontal">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Hotel Name <span class=" text-danger ">*</span></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Address" class="col-form-label">Address <span class=" text-danger ">*</span></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CountryName" class="col-form-label">Country <span class=" text-danger ">*</span></label>
                                <input asp-for="CountryName" class="form-control" />
                                <span asp-validation-for="CountryName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CityName" class="col-form-label">City <span class=" text-danger ">*</span></label>
                                <input asp-for="CityName" class="form-control" />
                                <span asp-validation-for="CityName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PriceStartFrom" class="col-form-label">Price Start From <span class=" text-danger ">*</span></label>
                                <input asp-for="PriceStartFrom" class="form-control" />
                                <span asp-validation-for="PriceStartFrom" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Discount" class="col-form-label">Discount <span class=" text-danger ">*</span></label>
                                <input asp-for="Discount" class="form-control" />
                                <span asp-validation-for="Discount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LocationMap" class="col-form-label">Location Map <span class=" text-danger ">*</span></label>
                                <input asp-for="LocationMap" class="form-control" />
                                <span asp-validation-for="LocationMap" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ImageFiles" class="col-form-label">Images</label>
                            <input type="file" asp-for="ImageFiles" class="form-control" name="File" accept="image/*" multiple onchange="PreviewImages()" />
                            <span asp-validation-for="ImageFiles" class="text-danger"></span>
                            <div class="mt-3" style="text-align: end;">
                                <div class="row" id="ImagePreviewContainer">
                                    @foreach (var item in Model.HotelImages)
                                    {
                                        <img src="~/images/hotel/@item.HotelImage" alt="img" class="img-thumbnail" style="width:170px;" />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-2">
                        <button type="submit" class="btn btn-sm btn-info"><i class="bi bi-save"></i> Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function PreviewImages() {
            var previewContainer = $("#ImagePreviewContainer");
            previewContainer.empty();
        @foreach (var item in Model.HotelImages)
        {
            <text>
                var imageUrl = '@Url.Content("~/images/hotel/")' + '@item.HotelImage';
                previewContainer.append('<img class="img-thumbnail" data-filename="@item.HotelImage" src="' + imageUrl + '" alt="img" style="width:170px; margin-right: 10px;">');
            </text>
        }             
            var filesInput = $('input[type="file"]');
            var files = filesInput[0].files;

            for (var i = 0; i < files.length; i++) {
                var file = files[i];

                if (file.type.match('image.*')) {
                    var img = $('<img>').addClass('img-thumbnail').attr({
                        'src': URL.createObjectURL(file),
                        'style': 'width: 170px; margin-right: 10px;'
                    });
                    previewContainer.append(img);
                }
            }
            previewContainer.find('img[data-filename]').each(function () {
                var dataFilename = $(this).data('filename');
                var completeUrl = '@Url.Content("~/images/hotel/")' + dataFilename;
                $(this).attr('src', completeUrl);
            });
        }
        $(document).ready(function () {
            PreviewImages();
            $('input[type="file"]').on('change', PreviewImages);
        });
    </script>
}






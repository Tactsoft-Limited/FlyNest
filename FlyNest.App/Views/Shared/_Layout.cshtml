<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlyNest.App</title>

    @await Html.PartialAsync("Frontend/_Styles")

    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <header>

        <div class="preloader" id="preloader">
            <div class="spinner">
                <div class="double-bounce1"></div>
                <div class="double-bounce2"></div>
            </div>
        </div>

        @await Html.PartialAsync("Frontend/_Navbar")
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await Html.PartialAsync("Frontend/_Footer")

    <button type="button" id="scroll-bottom-top" title="Go to Top">
        <i class="bi bi-chevron-up"></i>
    </button>
    <script>
        setTimeout(() => {
            document.getElementById('preloader').style.display = "none"
        }, 2500)
    </script>

    @await Html.PartialAsync("Frontend/_Scripts")

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

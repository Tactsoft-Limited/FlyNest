<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Renaissance Holidays</title>

    <link rel="apple-touch-icon" sizes="180x180" href="~/images/favicon_io/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/images/favicon_io/android-chrome-512x512.png">
    <link rel="icon" type="image/png" sizes="512x512" href="~/images/favicon_io/android-chrome-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/favicon_io/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon_io/favicon-32x32.png">
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    @await Html.PartialAsync("Frontend/_Styles")

    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <header>

        <div class="preloader" id="preloader">
            <div class="spinner">
                <div class="double-bounce1"></div>
                <div class="double-bounce2"></div>
            </div>
        </div>

        @await Html.PartialAsync("Frontend/_Navbar")
    </header>
    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    @await Html.PartialAsync("Frontend/_Footer")

    <div class="fixed-area">
        <div class="messenger">
            <div title="Live Chat" class="messenger-btn"><img src="https://volgo-prime.ru/img/icons/chat.svg" alt="Live Chat" /></div>
            <div id="messenger-links" class="messenger-links">
                @*                 <a title="Phone" href="tel:+120345678910">
                <img src="https://volgo-prime.ru/img/icons/phone-icon.svg" alt="Phone" /></a> *@
                <a target="_blank" title="Whatsapp" href="whatsapp://send?phone=+8801958618221
">
                    <img src="https://volgo-prime.ru/img/icons/whatsapp-icon.svg" alt="Whatsapp" />
                </a>
                <a target="_blank" title="Messanger" href="https://www.facebook.com/messages/t/101747419491888">
                    <img src="https://img.icons8.com/?size=256&id=20419&format=png" alt="Messanger" />
                </a>
            </div>
        </div>
    </div>
    <button type="button" id="scroll-bottom-top" title="Go to Top">
        <i class="bi bi-chevron-up"></i>
    </button>

    <script>

        setTimeout(() => {
            document.getElementById('preloader').style.display = "none"
        }, 2500)


    </script>


    @await Html.PartialAsync("Frontend/_Scripts")

    <script>
        var menuBtn = $('.messenger-btn'),
            menu = $('.messenger-links');
        menuBtn.on('click', function () {
            if (menu.hasClass('show')) {
                menu.removeClass('show');
            } else {
                menu.addClass('show');
            }
        });
        $(document).mouseup(function (e) {
            var div = $('.messenger');
            if (!div.is(e.target)
                && div.has(e.target).length === 0) {
                $('.messenger-links').removeClass('show');
            }
        });

    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>

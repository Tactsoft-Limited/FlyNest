@model IEnumerable<FlyNest.Application.ViewModels.VmEntities.VmAirport>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
    int idno = 1;
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Airport</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Airport</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Airport List</h3>
            <div class="card-tools">
                <a asp-action="AddEdit" asp-controller="Airport" class="btn btn-info btn-sm"><i class="bi bi-plus-square"></i>Add Airport</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CountryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CityName)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                               @idno
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CityName)
                            </td>
                           
                            <td>
                                @* @Html.ActionLink("Edit", "AddEdit", new { id = item.Id }) |
                     
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) *@

                               <a asp-action="AddEdit" asp-controller="Airport" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="bi bi-pencil-square"></i> Edit </a>
                                <a asp-action="Delete" asp-controller="Airport" asp-route-id="@item.Id"
                                    class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete </a>
                             
                            </td>
                        </tr>
                        idno++;

                    }
                </tbody>
            </table>

        </div>
    </div>
</section>


@model IEnumerable<FlyNest.Application.ViewModels.VmEntities.VmTourPackage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Airline</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Airline</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Airline List</h3>
            <div class="card-tools">
                <a asp-action="AddEdit" asp-controller="TourPackage" class="btn btn-info btn-sm"><i class="bi bi-plus-square"></i>New Tour Package</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TourDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PackagePrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Countries)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PackageType)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TourDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PackagePrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Countries)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PackageType)
                            </td>
                            <td>
                                @Html.ActionLink("AddEdit", "AddEdit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>

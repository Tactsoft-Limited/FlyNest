@model IEnumerable<FlyNest.Application.ViewModels.VmEntities.VmRoom>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
    int ino = 1;
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Room</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Hotels</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Room List</h3>
            <div class="card-tools">
                <a asp-action="AddEdit" asp-controller="Room" class="btn btn-info btn-sm"><i class="bi bi-plus-square"></i>Add Room</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table nowrap" id="dataTable" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>@Html.DisplayNameFor(x => x.HotelName)</th>
                        <th>@Html.DisplayNameFor(x => x.Name)</th>
                        <th>@Html.DisplayNameFor(x => x.Facilities)</th>
                        <th>@Html.DisplayNameFor(x => x.Benefits)</th>
                        <th>@Html.DisplayNameFor(x => x.PriceParNight)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@ino</td>
                            <td>@Html.DisplayFor(modelItem => item.HotelName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Facilities)</td>
                            <td>@Html.DisplayFor(modelItem => item.Benefits)</td>
                            <td>@Html.DisplayFor(modelItem => item.PriceParNight)</td>
                            @*  <td>

                                <img class="img-thumbnail" width="40" src="~/images/room/@item.RoomImage" alt="Image" />

                        </td> *@
                            <td style="vertical-align: middle; width:140px;">
                                <a href="@Url.Action("AddEdit", new { id = item.Id })" class="btn btn-link btn-sm text-success" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                |
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-link btn-sm text-primary" title="Details">
                                    <i class="far fa-eye"></i>
                                </a>
                                |
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-link btn-sm text-danger" title="Delete" onclick="return confirmAndDelete(this);">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                        ino++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

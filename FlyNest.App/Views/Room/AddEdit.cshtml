@model FlyNest.Application.ViewModels.VmEntities.VmRoomImages

@{
    ViewData["Title"] = "AddEdit";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Room</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Create Room</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Create Room</h3>
        </div>
        <div class="card-body">
            <form asp-action="AddEdit" asp-controller="Room" role="form" enctype="multipart/form-data">
                <div class="modal-body form-horizontal">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="col-form-label">Hotel Name</label>
                            <select asp-for="Room.HotelId" asp-items="@(ViewBag.HotelId)" class="form-control select2">
                                <option value="">--Select Project--</option>
                            </select>
                            <span asp-validation-for="Room.HotelId" class="text-danger"></span>
                        </div>
                        

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Room Name</label>
                                <input asp-for="Room.Name" class="form-control"/>
                                <span asp-validation-for="Room.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Room Benefits</label>
                                <input asp-for="Room.Benefits" class="form-control"/>
                                <span asp-validation-for="Room.Benefits" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Room Facilities</label>
                                <input asp-for="Room.Facilities" class="form-control"/>
                                <span asp-validation-for="Room.Facilities" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Price Par Night</label>
                                <input asp-for="Room.PriceParNight" class="form-control"/>
                                <span asp-validation-for="Room.PriceParNight" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="RoomImage" class="col-form-label">Images</label>
                            <input type="file" asp-for="RoomImage" class="form-control" name="roomImages" accept="image/*" multiple onchange="PreviewImages()"/>
                            <span asp-validation-for="RoomImage" class="text-danger"></span>
                            <div class="mt-3" style="text-align: end;">
                                <div id="ImagePreviewContainer" class="row"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-2">
                        <button type="submit" class="btn btn-sm btn-info"><i class="bi bi-save"></i> Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
